{
  "functions": {
    "api/blog/[slug].js": {
      "maxDuration": 10
    },
    "api/sitemap.js": {
      "maxDuration": 10
    }
  },
  "redirects": [
    {
      "source": "/(.*)",
      "has": [{ "type": "host", "value": "gangagamesblog.com" }],
      "destination": "https://www.gangagamesblog.com/$1",
      "permanent": true
    },
    {
      "source": "/index.html",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/contact-us.html",
      "destination": "/contact.html",
      "permanent": true
    },
    {
      "source": "/about-us.html",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/category/:slug",
      "destination": "/category/:slug/",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/category/:slug",
      "destination": "/category-style-v2.html"
    },
    {
      "source": "/category/:slug/",
      "destination": "/category-style-v2.html"
    },
    {
      "source": "/:category/:slug",
      "destination": "/api/blog/:slug"
    },
    {
      "source": "/blog/:slug",
      "destination": "/api/blog/:slug"
    },
    {
      "source": "/blog/:slug/",
      "destination": "/api/blog/:slug"
    },
    {
      "source": "/sitemap.xml",
      "destination": "/api/sitemap"
    },
    {
      "source": "/",
      "destination": "/public/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/public/$1"
    }
  ],
  "headers": [
    {
      "source": "/api/blog/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, s-maxage=3600"
        }
      ]
    },
    {
      "source": "/category-style-v2.html",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors *"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors *"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}